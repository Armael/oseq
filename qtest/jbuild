
(executable
  ((name make)
   (modules (make))
   ))

(rule
  ((targets (run_qtest.ml))
   (deps (make.bc (files_recursively_in ../src)))
   (fallback)
   ;(libraries (qtest qcheck))
   (action
     (run ./make.bc -target ${@}))
  ))

(executable
  ((name run_qtest)
   (modes (native))
   (modules (run_qtest))
   (flags (:standard -w -5))
   (libraries (oseq gen qcheck containers))
  ))

(alias
 ((name    runtest)
  (deps    (run_qtest.exe))
  (action  (run ${<}))
  ))

